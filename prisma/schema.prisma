// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Registration {
  id           String     @id @default(cuid())
  education    String
  title        String
  firstname    String
  lastname     String
  email        String     @unique
  phone        String
  allergy      String?
  site         String
  reason       String?    @db.Text
  questions    Question[]
  status       String     @default("pending")
  created_at   DateTime   @default(now())
  file_type    String?
  archive      Boolean    @default(false)
  event_number Int
}

model Question {
  id            Int          @id @default(autoincrement())
  participant   Registration @relation(fields: [participantId], references: [id])
  participantId String
  sessionNum    Int
  question      String       @db.Text
  created_at    DateTime     @default(now())
}
